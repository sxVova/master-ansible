---
alerting:
  alertmanagers:
    - static_configs:
        - targets:
            - alertmanager:9093
global:
  scrape_interval:     10s
  evaluation_interval: 10s

rule_files:
  # - "first.rules"
  # - "second.rules"

scrape_configs:
  - job_name: cadvisor
    metrics_path: /metrics
    static_configs:
      - targets:
         - 'localhost:8080'
         - '10.140.26.70:8080' # web
         - '10.140.26.10:8080' # db
  - job_name: node_exporter
    metrics_path: /metrics
    static_configs:
      - targets:
         - 'localhost:9100'
         - '10.140.26.70:9100' # web
         - '10.140.26.10:9100' # db